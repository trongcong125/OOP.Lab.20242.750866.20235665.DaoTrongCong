<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="768.0" prefWidth="1024.0"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">

	<fx:define>
		<ToggleGroup fx:id="filterCategory" />
	</fx:define>

	<top>
		<HBox spacing="20" alignment="CENTER_LEFT"
			BorderPane.alignment="CENTER">
			<padding>
				<Insets left="30.0" right="30.0" />
			</padding>
			<children>
				<Label text="🛒 Your Cart"
					style="-fx-font-size: 36px; -fx-text-fill: #004cff;" />
				<Region HBox.hgrow="ALWAYS" />
				<Button fx:id="btnViewStorePressed" text="← Back to Store"
					onAction="#btnViewStorePressed"
					style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 8;"
					prefHeight="40.0" prefWidth="150.0" />
			</children>
		</HBox>
	</top>

	<center>
		<VBox spacing="20" BorderPane.alignment="CENTER">
			<padding>
				<Insets left="30" right="30" top="10" bottom="10" />
			</padding>

			<!-- Filter section -->
			<HBox spacing="15" alignment="CENTER_LEFT">
				<children>
					<Label text="🔍 Filter:" style="-fx-font-size: 14px;" />
					<TextField fx:id="tfFilter"
						promptText="Enter ID or Title..." prefWidth="200" />
					<RadioButton text="By ID" toggleGroup="$filterCategory"
						selected="true" />
					<RadioButton text="By Title"
						toggleGroup="$filterCategory" />
				</children>
			</HBox>

			<!-- Table -->
			<TableView fx:id="tblMedia" prefHeight="400.0">
				<columns>
					<TableColumn fx:id="colMediaId" text="ID"
						prefWidth="100" />
					<TableColumn fx:id="colMediaTitle" text="Title"
						prefWidth="300" />
					<TableColumn fx:id="colMediaCategory" text="Category"
						prefWidth="200" />
					<TableColumn fx:id="colMediaCost" text="Cost"
						prefWidth="100" />
				</columns>
			</TableView>

			<!-- Buttons -->
			<HBox spacing="15" alignment="CENTER">
				<Button fx:id="btnPlay" text="▶ Play"
					onAction="#btnPlayPressed"
					style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 8;"
					prefWidth="100" />
				<Button fx:id="btnRemove" text="🗑 Remove"
					onAction="#btnRemovePressed"
					style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 8;"
					prefWidth="100" />
			</HBox>
		</VBox>
	</center>

	<bottom>
		<VBox alignment="CENTER" spacing="15">
			<padding>
				<Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
			</padding>
			<Label fx:id="costLabel" text="Total: 0.00 $"
				style="-fx-font-size: 24px; -fx-font-weight: bold;" />
			<Button text="✅ Place Order" onAction="#btnPlaceOrderPressed"
				fx:id="btnPlaceOrder" prefWidth="200" prefHeight="40" />
		</VBox>
	</bottom>
</BorderPane>