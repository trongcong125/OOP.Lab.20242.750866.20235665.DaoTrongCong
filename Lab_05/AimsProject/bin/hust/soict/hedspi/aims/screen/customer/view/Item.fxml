<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-border-color: #dddddd; -fx-border-radius: 10; -fx-background-color: #ffffff; -fx-background-radius: 10;">
    
    <children>
        <VBox alignment="CENTER" spacing="12.0" prefHeight="220.0" prefWidth="260.0">
            <padding>
                <Insets top="20" bottom="20" left="10" right="10"/>
            </padding>

            <!-- Title -->
            <Label fx:id="lblTitle" text="Media Title"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" />

            <!-- Price -->
            <Label fx:id="lblCost" text="0.00 $"
                   style="-fx-font-size: 14px; -fx-text-fill: #666666;" />

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="btnAddToCart"
                        text="Add to Cart"
                        onAction="#btnAddToCartClicked"
                        style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 8;"
                        prefWidth="100" prefHeight="32" />

                <Button fx:id="btnPlay"
                        text="Play"
                        onAction="#btnPlayClicked"
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 8;"
                        prefWidth="80" prefHeight="32" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>